<h1>Listing news_releases</h1>

<ul>
<% @news_releases.each do |news_release| %>
<li>
<%= link_to "#{news_release.released_on.strftime('%Y-%m-%d')}:
#{news_release.title}", news_release %> </li>
<% end %> </ul>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Released on</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_releases.each do |news_release| %>
      <tr>
        <td><%= news_release.title %></td>
        <td><%= news_release.released_on %></td>
        <td><%= news_release.body %></td>
        <td><%= link_to 'Show', news_release %></td>
        <td><%= link_to 'Edit', edit_news_release_path(news_release) %></td>
        <td><%= link_to 'Destroy', news_release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add News Release', new_news_release_path, class: 'btn btn-primary' %>
